<h1>Eat That Burger!!!</h1>

<h2>You know you wana!</h2>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Bon Apetit!</h2>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> burgers/burgers-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" devour!<br>
    <input type="radio" name="hungry" value="0"> No thanks
  </div>

  <button type="submit">Add Burger</button>
</form>
